{% extends 'admin/base.html.twig' %}

{% block title %}Adiministration des commentaire{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1 class="my-5">Amdministration des commentaires</h1>

    <table class="table table-hover">

        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Auteur</th>
                <th>Comentaire</th>
                <th>Note</th>
                <th>Annonce</th>
            </tr>
        </thead>
        <tbody>
         {% for comment in comments %}
        <tr>
       
            
        
            <td>{{comment.id}}</td>
            <td>{{comment.createdAt | date('d/m/Y')}}</td>
            <td><img src="{{comment.author.picture}}" class="avatar avatar-micro" alt="">{{comment.author.fullName}}</td>
            <td>{{comment.content}}</td>
            <td><span class="badge badge-dark">{{comment.rating}}</span></td>
            <td>{{comment.ad.title}}</td>
            <td><a href="{{path('admin_comment_edit',{'id':comment.id})}}" class="btn btn-primary">
            <i class="fas fa-pen"></i> </a>
            <a href="{{path('admin_comment_delete',{'id':comment.id})}}" class="btn btn-danger">
            <i class="fas fa-trash"></i>
            </a>
            </td>
        
        </tr>
        {% endfor %}
        
        </tbody>
    
    </table>

</div>
{% endblock %}
